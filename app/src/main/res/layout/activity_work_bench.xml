<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlPanel.WorkBench.WorkbenchTab"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/card_back"
    android:padding="21dp"
    android:paddingRight="21dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Created Projects"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <ListView
            android:id="@+id/my_projects_recycler_view"
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="In Progress"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ListView
            android:id="@+id/working_projects_recycler_view"
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Completed"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <ListView
            android:id="@+id/past_projects_recycler_view"
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>