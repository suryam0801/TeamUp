<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="23dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/notification_object_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_check_circle_black_24dp">
        </ImageView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_object_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="12dp"
                android:text="Notification Title"
                android:textSize="12dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/notification_object_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="Sample notification description"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                >
            </TextView>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>