<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CreateProject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2196F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="18dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/chevron_left_white"></ImageButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:text="Create New Project"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#50AAF8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Name"
                        android:layout_marginLeft="23dp"
                        android:textSize="12dp"
                        android:textColor="#DEDADA"
                        android:fontFamily="@font/roboto_regular"></TextView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Enter Project Name Here"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:textColorHint="@color/white"
                        android:backgroundTint="@color/white"
                        android:id="@+id/projectName">
                    </EditText>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Project Category"
                        android:layout_marginLeft="23dp"
                        android:textSize="12dp"
                        android:textColor="#DEDADA"
                        android:fontFamily="@font/roboto_regular"></TextView>

                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="0dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="28dp"
                        android:background="#50AAF8" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="Description (100 words)"
                    android:textSize="12dp"
                    android:layout_marginLeft="23dp"
                    android:textColor="#C3BDBD"
                    android:fontFamily="@font/roboto_regular"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Enter Project Description Here"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9B9696"
                    android:fontFamily="@font/roboto_regular"
                    android:backgroundTint="@color/black"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/projectDescription">
                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Preferred Skills (What skills does your project require?)"
                    android:textSize="12dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#C3BDBD"
                    android:fontFamily="@font/roboto_regular"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:hint="Enter Skills"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:textColorHint="#9B9696"
                        android:backgroundTint="@color/black"
                        android:id="@+id/skill_entry_edittext"></EditText>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="70"
                        android:text="add"
                        android:layout_marginRight="20dp"
                        android:textColor="#5B86E5"
                        android:textSize="13dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:background="@drawable/create_project_skill_add_button"
                        android:id="@+id/addSkillSet"
                        android:layout_gravity="center"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/chip_group_create_skills">
                </com.google.android.material.chip.ChipGroup>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:text="Create Task"
                    android:textSize="18dp"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/gradient_button"
                    android:id="@+id/createProjectSubmit">
                </Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>