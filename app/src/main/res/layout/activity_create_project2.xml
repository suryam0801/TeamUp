<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CreateProject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/chevron_left_white"></ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="20dp"
                android:text="Create New Project"
                android:textColor="#FFFFFF"
                android:textSize="30dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:layout_marginLeft="23dp"
                android:textSize="15dp"
                android:textColor="#DEDADA"
                android:fontFamily="@font/roboto_regular"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Project Name Here"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"
                android:id="@+id/projectName">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description (100 words)"
                android:textSize="15dp"
                android:layout_marginLeft="23dp"
                android:textColor="#DEDADA"
                android:fontFamily="@font/roboto_regular"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Enter Project Description Here"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:id="@+id/projectDescription">
            </EditText>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Preferred Skills (What skills does your project require?)"
            android:textSize="15dp"
            android:layout_marginLeft="23dp"
            android:textColor="#C3BDBD"
            android:fontFamily="@font/roboto_regular"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:hint="Enter Skills"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColorHint="#9B9696"
                android:backgroundTint="@color/black"
                android:id="@+id/skill_entry_edittext"></EditText>
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="70"
                android:text="add"
                android:layout_marginRight="20dp"
                android:textColor="#5B86E5"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:background="@drawable/create_project_skill_add_button"
                android:id="@+id/addSkillSet"
                android:layout_gravity="center"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="50"
            android:layout_marginTop="10dp">
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chip_group_create_skills">
            </com.google.android.material.chip.ChipGroup>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Submit"
            android:textSize="20dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/gradient_button"
            android:id="@+id/createProjectSubmit">
        </Button>
    </LinearLayout>


</LinearLayout>