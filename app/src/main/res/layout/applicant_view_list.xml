<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/applicant_accept_button"></ImageView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/applicant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/applicant_pitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Android Developer"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#D1D1D1"
                android:textSize="12dp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

                <Button
                    android:layout_width="95dp"
                    android:layout_height="37dp"
                    android:background="@drawable/unpressable_button"
                    android:id="@+id/applicant_accept"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#828282"
                    android:textAllCaps="false"
                    android:layout_marginRight="12dp"
                    android:text="Review">
                </Button>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="37dp"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@drawable/applicant_accept_button"
                    android:id="@+id/applicant_reject"
                    android:textAllCaps="false"
                    android:text="Accept">
                </Button>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>