<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".EditOrView.EditOrViewProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/bck_view_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_left_black_24dp">
                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingRight="25dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="20dp">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="18.5dp"
                android:background="#EEEEEE">
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="57dp"
                    android:orientation="vertical"
                    android:background="@drawable/light_blue_nav_button">

                    <TextView
                        android:id="@+id/viewProfile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="56dp"
                        android:text="User Name"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:gravity="center">
                    </TextView>

                    <TextView
                        android:id="@+id/viewProfile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="UserEmail@email.com"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12dp"
                        android:textColor="#828282"
                        android:layout_marginBottom="22dp"
                        android:gravity="center"></TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_view_profile_image"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/ic_account_circle_black_24dp" />

                    <Button
                        android:id="@+id/profile_view_profilePicSetterImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/edit_project_button_background"
                        android:foreground="@drawable/edit_drawable"
                        android:foregroundGravity="center"/>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/light_blue_nav_button"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created Projects"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12dp"
                        android:layout_gravity="center"></TextView>

                    <TextView
                        android:id="@+id/viewProfile_createdProjectsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Progress"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12dp"
                        android:layout_gravity="center"></TextView>

                    <TextView
                        android:id="@+id/viewProfileWorkingProjectCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight=".33"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12dp"
                        android:layout_gravity="center"></TextView>

                    <TextView
                        android:id="@+id/viewProfile_CompletedProjectsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="11dp"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginLeft="11dp"
                android:orientation="vertical"
                android:background="@drawable/light_blue_nav_button">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="99"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Specialized Field"
                            android:textColor="#828282"
                            android:fontFamily="@font/roboto_regular">
                        </TextView>

                        <TextView
                            android:id="@+id/viewProfile_specializedField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginTop="8dp"
                            android:text="Android Developer"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular">
                        </TextView>

                        <EditText
                            android:id="@+id/viewProfileChangeSpecialization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter New Specialty"
                            android:textColorHint="#6CACFF"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:backgroundTint="#6CACFF"></EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <Button
                            android:id="@+id/editSpecialization"
                            android:layout_width="12dp"
                            android:layout_height="12sp"
                            android:background="@drawable/create_24px">
                        </Button>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="99"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Specialized Field"
                            android:textColor="#828282"
                            android:fontFamily="@font/roboto_regular">
                        </TextView>

                        <TextView
                            android:id="@+id/viewProfile_secondarySkill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginTop="8dp"
                            android:text="Android Developer"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular">
                        </TextView>

                        <EditText
                            android:id="@+id/viewProfileChangeSecondarySkill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter New Specialty"
                            android:textColorHint="#6CACFF"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:backgroundTint="#6CACFF"></EditText>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <Button
                            android:id="@+id/editSecondarySkill"
                            android:layout_width="12dp"
                            android:layout_height="12sp"
                            android:background="@drawable/create_24px">
                        </Button>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="99"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Specialized Field"
                            android:textColor="#828282"
                            android:fontFamily="@font/roboto_regular">
                        </TextView>

                        <TextView
                            android:id="@+id/viewProfile_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginTop="8dp"
                            android:text="Android Developer"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular">
                        </TextView>

                        <EditText
                            android:id="@+id/viewProfileChangeLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter New Specialty"
                            android:textColorHint="#6CACFF"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:textSize="12dp"
                            android:backgroundTint="#6CACFF"></EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <Button
                            android:id="@+id/editLocation"
                            android:layout_width="12dp"
                            android:layout_height="12sp"
                            android:background="@drawable/create_24px">
                        </Button>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile_finalize_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:text="Finalize Changes"
                    android:textColor="#828282"
                    android:layout_marginRight="10dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/unpressable_button">
                </Button>

                <Button
                    android:id="@+id/profile_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:text="Logout"
                    android:layout_weight="50"
                    android:textColor="#6CACFF"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/light_blue_nav_button">
                </Button>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>