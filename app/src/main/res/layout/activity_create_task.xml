<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_left_black_24dp"></ImageButton>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="21dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Teamup Mobile Application"
                    android:textColor="#3B3B3B"
                    android:textSize="20dp"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="9dp"
                android:background="#D3CECE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="5dp"
                        android:text="Project Name"
                        android:textColor="#9D9D9D"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:id="@+id/create_task_project_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="5dp"
                        android:text="Project Name"
                        android:textColor="#9D9D9D"
                        android:textSize="14dp"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:background="#9D9D9D"></View>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="5dp"
                        android:text="Specialized Field"
                        android:textColor="#828282"
                        android:textSize="12dp"></TextView>

                    <EditText
                        android:id="@+id/task_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#9D9D9D"
                        android:hint="Enter New Task Name"
                        android:textColor="@color/black"
                        android:textColorHint="#9D9D9D"
                        android:textSize="14dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="5dp"
                        android:text="Description"
                        android:textColor="#828282"
                        android:textSize="12dp"></TextView>

                    <EditText
                        android:id="@+id/task_description_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/create_project_skill_add_button"
                        android:backgroundTint="#9D9D9D"
                        android:hint="Enter Description (Optional)"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="#9D9D9D"
                        android:textSize="14dp"></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="5dp"
                        android:text="Task Priority"
                        android:textColor="#828282"
                        android:textSize="12dp"></TextView>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/taskPriorityRadioGroup">

                        <RadioButton
                            android:id="@+id/priority_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#D1D1D1"
                            android:textColor="#000000"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Low"
                            android:onClick="checkButton"/>

                        <RadioButton
                            android:id="@+id/priority_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#D1D1D1"
                            android:textColor="#000000"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Medium"
                            android:onClick="checkButton"/>

                        <RadioButton
                            android:id="@+id/priority_high"
                            android:layout_width="wrap_content"
                            android:buttonTint="#D1D1D1"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:fontFamily="@font/roboto_regular"
                            android:text="High"
                            android:onClick="checkButton"/>

                    </RadioGroup>

                    <Button
                        android:id="@+id/task_create_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/white"
                        android:text="Create Task"
                        android:textAllCaps="false"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto_medium"
                        android:background="@drawable/gradient_button">
                    </Button>

                    <Button
                        android:id="@+id/task_create_discard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="#828282"
                        android:text="Discard"
                        android:textAllCaps="false"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto_medium"
                        android:background="@drawable/unpressable_button">
                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>