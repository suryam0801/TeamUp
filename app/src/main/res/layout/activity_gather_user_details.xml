<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical"
    tools:context=".login.GatherUserDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:layout_gravity="center"
            android:text="TeamUp"
            android:layout_marginTop="30dp"
            android:textColor="#2196F3"
            android:textSize="50dp"
 />

        <TextView
            android:id="@+id/beneathTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Login to Continue"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#D1D1D1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile picture"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#B3B1B1"
                android:textSize="11dp"
                android:layout_gravity="center">
            </TextView>

            <RelativeLayout
                android:id="@+id/imagePreview"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp" >


                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/profilePicSetterImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="74dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/edit_project_button_background"
                    android:foreground="@drawable/edit_drawable"
                    android:foregroundGravity="center"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/primarySkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ACA9A9"
                android:textColorHint="#ACA9A9"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:hint="Your Specialized Field (Enter 1)"
                android:inputType="textEmailAddress" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/secondarySkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ACA9A9"
                android:textColorHint="#ACA9A9"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:hint="Secondary Skill"
                android:inputType="textEmailAddress" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ACA9A9"
                android:textColorHint="#ACA9A9"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:hint="Location"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/roboto_black"
                android:text="Register"
                android:textColor="#FFFFFFFF"
                android:paddingRight="19dp"
                android:paddingLeft="19dp"
                android:textSize="15dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/right_forward_arrow"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>