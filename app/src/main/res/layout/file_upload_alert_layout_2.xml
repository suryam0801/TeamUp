<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/project_info_dialog"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new files"
        android:textColor="#3B3B3B"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose file to upload"
        android:textColor="#9D9D9D"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5.5dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12dp">
    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:background="@drawable/dashed_background">


        <ImageView
            android:id="@+id/filePreviewImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/brochure" />

    </LinearLayout>

    <EditText
        android:id="@+id/fileNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/black"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter File Name"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="right">


        <Button
            android:id="@+id/cancelFileSelect"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="right"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:textColor="#828282"
            android:background="@drawable/unpressable_button"
            android:text="Cancel" />

        <Button
            android:id="@+id/fileUploadAlertButton"
            android:layout_width="110dp"
            android:layout_marginLeft="10dp"
            android:layout_height="32dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="right"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:textColor="#6CACFF"
            android:background="@drawable/create_project_skill_add_button"
            android:text="Upload" />

    </LinearLayout>

</LinearLayout>