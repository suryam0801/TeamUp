<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore.ExploreTab"
    android:orientation="vertical"
    android:background="@color/card_back">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview_explore_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:divider="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="50dp"
            android:paddingTop="5dp">
        </ListView>

        <Button
            android:id="@+id/addproject"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:foreground="@drawable/ic_add_black_24dp"
            android:background="@drawable/create_project_button_background"
            android:layout_marginTop="20dp"
            android:text="" />
    </FrameLayout>



</LinearLayout>