    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your reason to join / what are the skills you can contribute to the team?"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="10.5dp"
            android:visibility="gone"
            android:textSize="12dp"
            android:id="@+id/applicationdisplaypopup"
            android:textColor="@color/black">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColorHint="#B6B6B6"
            android:id="@+id/applicationentrypopup"
            android:background="@drawable/edittext_border_application_reason"
            android:textSize="12dp"
            android:visibility="gone"
            android:padding="10dp"
            android:textColor="#828282"
            android:fontFamily="@font/roboto_regular">
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="17dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Request To Join"
            android:textColor="#5B86E5"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/create_project_skill_add_button"
            android:id="@+id/popup_accept_button">
