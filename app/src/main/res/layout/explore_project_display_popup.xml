<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/project_info_dialog"
    android:paddingTop="28dp"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Name"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/popup_project_name">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/popup_creatorname_display_view"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created By: "
            android:textColor="#B6B6B6"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_regular">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creator Name"
            android:textColor="#6CACFF"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/popup_project_creator">
        </TextView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textColor="@color/black"
            android:id="@+id/placeholderDescription"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12dp"
            android:layout_marginBottom="10dp">
        </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:lineSpacingExtra="5dp"
        android:textColor="#B6B6B6"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12dp"
        android:id="@+id/popup_project_short_description"
        android:layout_marginBottom="20dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferred Skills"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12dp"
