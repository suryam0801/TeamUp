<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_object_background"
            android:layout_weight="99"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="22dp">

                <ImageView
                    android:id="@+id/task_object_color_icon"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:background="#FF6161">

                </ImageView>

                <TextView
                    android:id="@+id/task_name_taskObject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_description_taskObject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="16dp"
                android:text="Task Description"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/selectedIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:background="@drawable/ic_check_circle_black_24dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1">
        </ImageView>

    </LinearLayout>


</LinearLayout>